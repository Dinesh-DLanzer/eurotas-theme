<div data-section-id="{{ section.id }}" data-section-type="section-banner-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-banner-v7">
    <div class="container-fluid my-container">
      <div class="banner-v7">
        <a href="{{section.settings.banner_url}}" class="d-block">
          {% if section.settings.banner_img == blank %}
          <img src="//placehold.it/1570x500" class="img-fluid w-100" alt="">
          {% else %}
          <img src="{{section.settings.banner_img|img_url:'master'}}" class="img-fluid w-100" alt="Banner">
        </a>
        {% endif %}
        <div class="box-banner-info">
          <div class="banner-info">
            {% if section.settings.banner_title != blank %}
            <h5><a href="{{section.settings.banner_info_url}}">{{section.settings.banner_title}}</a></h5>
            {% endif %}
            {% if section.settings.banner_content != blank %}
            <p>{{section.settings.banner_content}}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner v7",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Banner"
    },
    {
      "type": "header",
      "content": "Banner Image"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "info": "1570 x 300px recommended",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "banner_url",
      "label": "Banner URL",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Banner info"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Title",
      "default": "# Men's"
    },
    {
      "type": "text",
      "id": "banner_content",
      "label": "Content",
      "default": "(150 Items)"
    },
    {
      "type": "url",
      "id": "banner_info_url",
      "label": "URL",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v7",
      "category": "Home 5"
    }
  ]
}
{% endschema %}


