<div data-section-id="{{ section.id }}" data-section-type="section-banner-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-banner-v5">
    <div class="container-fluid my-container">
      <div class="banner-v5">
        <div class="banner-left order-2 order-lg-1">
          <div class="row">
            <div class="col-xl-4 col-12">
            </div>
            <div class="col-xl-8 col-12">
              <div class="banner-1 banner-item style2">
                <a href="{{section.settings.banner_url1}}" class="d-block text-right img-url">
                  {% if section.settings.banner_img1 == blank %}
                  <img src="//placehold.it/570x400" class="img-fluid w-100" alt="">
                  {% else %}
                  <img src="{{section.settings.banner_img1|img_url:'master'}}" class="img-fluid" alt="Banner">
                  {% endif %}
                </a>
                <div class="banner-info">
                  <h5>{{section.settings.banner_title1}}</h5>
                  <a href="{{section.settings.btn_url1}}" class="btn-banner">{{section.settings.btn_name1}}<i class="lnr lnr-arrow-right"></i></a>
                </div> 
              </div>
            </div>
          </div>
          <div class="banner-2 banner-item style2">
            <a href="{{section.settings.banner_url2}}" class="d-block img-url">
              {% if section.settings.banner_img2 == blank %}
              <img src="//placehold.it/870x431" class="img-fluid w-100" alt="">
              {% else %}
              <img src="{{section.settings.banner_img2|img_url:'master'}}" class="img-fluid w-100" alt="Banner">
              {% endif %}
            </a>
            <div class="banner-info">
              <h5>{{section.settings.banner_title2}}</h5>
              <a href="{{section.settings.btn_url2}}" class="btn-banner">{{section.settings.btn_name2}}<i class="lnr lnr-arrow-right"></i></a>
            </div> 
          </div>
        </div>
        <div class="banner-right order-1 order-lg-2">
          <div class="section-title col-xl-8 text-right float-right p-0">
            <h2>{{section.settings.section_title}}</h2>
            <p>{{section.settings.section_description}}</p>
          </div>
          <div class="banner-item style2">
            <a href="{{section.settings.banner_url3}}" class="d-block img-url">
              {% if section.settings.banner_img3 == blank %}
              <img src="//placehold.it/670x960" class="img-fluid w-100" alt="">
              {% else %}
              <img src="{{section.settings.banner_img3|img_url:'master'}}" class="img-fluid w-100" alt="Banner">
              {% endif %}
            </a>
            <div class="banner-info">
              <h5>{{section.settings.banner_title3}}</h5>
              <a href="{{section.settings.btn_url3}}" class="btn-banner">{{section.settings.btn_name3}}<i class="lnr lnr-arrow-right"></i></a>
            </div> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
