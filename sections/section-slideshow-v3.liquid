<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-slideshow-v3">

    <div class="slider-v3">
      <div class="js-slideshow-v3 mb-0">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "slideshow" %}
        <div class="slideshow-item">
          <div class="bg-slider">
            {% if block.settings.bg_img != blank %}
            <img src = "{{block.settings.bg_img|img_url:'master'}}" class="img-fluid w-100" alt="slideshow">
            {% else %}
            <img src ="//placehold.it/1920x980" class="img-fluid" alt="slideshow">
            {% endif %}
          </div>

          <div class="slideshow-content">
            {% if block.settings.block_content1 != blank %}
            <p style="color: {{block.settings.color_slider}}" class="content1">{{block.settings.block_content1}}</p>
            {% endif %}

            {% if block.settings.block_content2 != blank %}
            <h3 style="color: {{block.settings.color_slider}}" class="content2">{{block.settings.block_content2}}</h3>
            {% endif %}

            {% if block.settings.block_content3 != blank %}
            <p style="color: {{block.settings.color_slider}}" class="content3">{{block.settings.block_content3}}</p>
            {% endif %}

            {% if block.settings.block_btn_name != blank %}
            <a href="{{block.settings.block_url}}" class="btn-sv3-{{section.id}}-{{block.id}} button-name"><span>{{block.settings.block_btn_name}}</span></a>
            {% endif %}

          </div>
          <div class="slider-img js-effect-v3">
            <a href="{{block.settings.block_url}}" class="d-block">
              {% if block.settings.block_img != blank %}
              <img src="{{block.settings.block_img|img_url:'master'}}" class="img-fluid" alt="slideshow">
              {% else %}
              <img src="//placehold.it/783x535"  class="img-fluid" alt="slideshow">
              {% endif %}
            </a>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
      <div class="social d-none d-lg-flex">
        {% for block in section.blocks %}
        {% if block.type == "social" %}
        <a href="{{block.settings.social_url}}" class="d-block">
          {{block.settings.social_name}}
        </a>
        {% endif %}
        {% endfor %}
      </div>
      <div class="paginate d-none d-xl-block">
        {% for block in section.blocks %}
        {% if block.type == "slideshow" %}
        {% if forloop.index < 10 %}
        <span>0{{forloop.index}}</span>
        {% else %}
        <span>{{forloop.index}}</span>
        {% endif %}
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>

  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
  {% if block.type == "slideshow" %}
  .section-slideshow-v3 .btn-sv3-{{section.id}}-{{block.id}}{
    color: {{block.settings.color_btn_name}};
    background: {{block.settings.bg_btn_name}};
  }
  .section-slideshow-v3 .btn-sv3-{{section.id}}-{{block.id}}:hover, .section-slideshow-v3 .btn-sv3-{{section.id}}-{{block.id}}:focus {
    color: {{block.settings.color_btn_name_hover}};
    background: {{block.settings.bg_btn_name_hover}};
  }
  {% endif %}
  {% endfor %}
  {% endif %}
</style>
